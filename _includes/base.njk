<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">
		<link rel="me" href="https://twitter.com/jarenado" />
		<link rel="me" href="https://github.com/jarenado" />

		{#- Webmentions-#}
		<link rel="pingback" href="https://webmention.io/josearenado.com/xmlrpc" />
		<link rel="webmention" href="https://webmention.io/josearenado.com/webmention" />

		{#- Uncomment this if youâ€™d like folks to know that you used Eleventy to build your site!  #}
		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">

    <!-- CSS Reset -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">

    <!-- Milligram CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.css">

    <!-- You should properly set the path from the main file. -->
    <style>
      header {
        background: lightsteelblue;
      }
      .container {
        <!--border: thin solid black;-->
      }
    </style>
	</head>
  <body>
    <header>
      <div class="container">
        <h1> {{metadata.title}} </h1>
      </div>
    </header>
    <div class="container">
      <main>
        {{ content | safe}}
      </main>
    </div>
  </body>
</html>
