<div class="post-section">
  <h3>Featured Posts</h3>
  <ul class="postlist">
  {%- for post in collections.featured | reverse -%}
  <li class="post">
    <a href="{{post.url}}">{{post.data.title}} | ({{post.date.toUTCString()}})</a>
    <p>{{post.data.description}}</p>
  </li>

  {%- endfor -%}
  </ul>
</div>

<div style="width: 95%;" class="post-section">
  <h3>Insta</h3>
  <div class="media-slider snaps-inline">
  {%- for post in collections.insta -%}
    <div class="media-element">
      <a href="{{post.data.url}}"> <img src="/assets/img/{{post.data.imageURL}}" /></a>
    </div>
  {%- endfor -%}
  </div>
</div>

